{
  "name": "hedera-mcp-server",
  "version": "1.0.0",
  "description": "FastMCP-powered Hedera network operations server with credits system",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "DATABASE_URL=sqlite://./data/credits.db tsx src/scripts/dev-server.ts",
    "dev:pg": "DATABASE_URL=postgresql://postgres:postgres@localhost:5432/hedera_mcp tsx src/scripts/dev-server.ts",
    "dev:raw": "tsx src/index.ts",
    "dev:full": "tsx src/scripts/dev-full.ts",
    "admin": "cd admin-portal && npm run dev",
    "start": "node dist/index.js",
    "inspector": "npx @modelcontextprotocol/inspector http://localhost:3000/sse",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:auth": "jest --testPathPattern=auth --detectOpenHandles --forceExit",
    "test:auth:unit": "jest --testPathPattern='auth.*\\.test\\.ts$' --detectOpenHandles --forceExit",
    "test:auth:integration": "jest --testPathPattern='auth.*\\.integration\\.test\\.ts$' --detectOpenHandles --forceExit",
    "test:integration": "jest --testPathPattern=integration --detectOpenHandles --forceExit",
    "test:mcp-e2e": "jest --testPathPattern=mcp-server-e2e --detectOpenHandles --forceExit",
    "test:mcp-simple": "jest --testPathPattern=mcp-server-simple --detectOpenHandles --forceExit",
    "test:db-abstraction": "jest --testPathPattern=database-abstraction --detectOpenHandles --forceExit",
    "test:credits": "jest --testPathPattern=credits-e2e --detectOpenHandles --forceExit",
    "test:credits-simple": "npx tsx src/scripts/test-credits.ts",
    "test:hbar-payment": "jest --testPathPattern=hbar-payment-e2e --detectOpenHandles --forceExit",
    "test:mcp-stdio": "jest --testPathPattern=mcp-stdio-e2e --detectOpenHandles --forceExit",
    "test:mcp-http": "jest --testPathPattern=mcp-http-e2e --detectOpenHandles --forceExit",
    "test:hedera-tools": "jest --testPathPattern=hedera-tools-credits-e2e --detectOpenHandles --forceExit",
    "test:e2e": "jest --testPathPattern='(hbar-payment-e2e|mcp-stdio-e2e|mcp-http-e2e|hedera-tools-credits-e2e)' --detectOpenHandles --forceExit",
    "test:simple-e2e": "jest --testPathPattern=simple-e2e --detectOpenHandles --forceExit",
    "lint": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write src",
    "inspect": "node --inspect=0.0.0.0:9229 dist/index.js",
    "test:coverage": "jest --coverage",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format:check": "prettier --check src/**/*.{ts,tsx,json}",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "db:setup": "tsx src/scripts/setup-db.ts",
    "db:push": "drizzle-kit push",
    "db:seed": "tsx src/db/seed.ts",
    "db:clear": "tsx src/scripts/clear-database.ts",
    "research": "tsx src/research/api-test.ts",
    "docker:build": "docker build -t hedera-mcp-server .",
    "docker:dev": "docker compose -f docker-compose.dev.yml --profile local-db up --build",
    "docker:dev:full": "docker compose -f docker-compose.dev.yml --profile full --profile inspector --profile local-db up --build",
    "docker:dev:sqlite": "DATABASE_URL=sqlite://./data/credits.db docker compose -f docker-compose.dev.yml up --build",
    "docker:prod": "docker compose -f docker-compose.prod.yml up -d --build",
    "docker:migrate": "docker compose -f docker-compose.migrate.yml run --rm migrate",
    "migrate": "tsx src/db/migrate.ts",
    "migrate:generate": "drizzle-kit generate",
    "migrate:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "keywords": [
    "hedera",
    "mcp",
    "fastmcp",
    "model-context-protocol",
    "blockchain",
    "ai",
    "agent",
    "credits"
  ],
  "author": "Hashgraph Online",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@hashgraph/proto": "^2.18.5",
    "@hashgraph/sdk": "^2.64.5",
    "@hashgraphonline/hedera-agent-kit": "0.0.18-canary.12",
    "@hashgraphonline/standards-sdk": "0.0.112-canary.4",
    "@types/redis": "^4.0.10",
    "@types/sqlite3": "^3.1.11",
    "better-sqlite3": "^11.10.0",
    "cors": "^2.8.5",
    "decimal.js": "^10.4.3",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.43.1",
    "express": "^4.18.2",
    "fastmcp": "^2.1.2",
    "file-type": "^19.6.0",
    "glob": "^11.0.2",
    "ioredis": "^5.6.1",
    "node-cron": "^3.0.3",
    "pg": "^8.16.0",
    "prom-client": "^15.1.0",
    "redis": "^5.1.0",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.13.0",
    "@swc/jest": "^0.2.29",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.18",
    "@types/express": "^4.17.22",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.11.0",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "boxen": "^7.1.1",
    "chalk": "^5.4.1",
    "drizzle-kit": "^0.31.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "http-proxy-middleware": "^3.0.5",
    "ioredis-mock": "^8.9.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "testcontainers": "^10.4.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hashgraph-online/hedera-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/hashgraph-online/hedera-mcp-server/issues"
  },
  "homepage": "https://github.com/hashgraph-online/hedera-mcp-server#readme"
}
