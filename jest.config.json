{
  "testEnvironment": "node",
  "roots": ["<rootDir>/src"],
  "testMatch": ["**/__tests__/**/*.test.{js,ts}", "**/*.{test,spec}.{js,ts}"],
  "transform": {
    "^.+\\.(t|j)sx?$": ["@swc/jest"]
  },
  "transformIgnorePatterns": [
    "node_modules/(?!(@hashgraphonline|@hashgraph|@elizaos|fastmcp|@modelcontextprotocol|file-type|mcp-proxy|xsschema|zod-to-json-schema)/)"
  ],
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "mjs"],
  "collectCoverageFrom": ["src/**/*.{ts,tsx}", "!src/**/*.d.ts", "!src/**/__tests__/**", "!src/**/types/**"],
  "setupFilesAfterEnv": ["<rootDir>/src/__tests__/setup.ts"],
  "testTimeout": 120000,
  "verbose": true,
  "moduleNameMapper": {
    "^file-type$": "<rootDir>/src/__tests__/__mocks__/file-type.js",
    "^@/(.*)$": "<rootDir>/src/$1",
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "extensionsToTreatAsEsm": [".ts"]
}
