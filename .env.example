# Hedera MCP Server Environment Variables
# Copy this file to .env and fill in your values

# Application
NODE_ENV=production
LOG_LEVEL=info
VERSION=latest

# Ports
MCP_PORT=3000     # MCP server (stdio/SSE)
API_PORT=3002     # HTTP API for admin portal
ADMIN_PORT=3001   # Admin portal web UI
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Database Configuration
# The server supports both SQLite and PostgreSQL via DATABASE_URL
# For development/testing with SQLite:
DATABASE_URL=sqlite://./data/credits.db

# For production with external PostgreSQL (recommended):
# DATABASE_URL=postgresql://user:password@host:5432/dbname
# Examples:
# - Supabase: postgresql://postgres:[YOUR-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres
# - Cloud SQL: postgresql://user:password@/dbname?host=/cloudsql/project:region:instance
# - Neon: postgresql://user:password@ep-cool-darkness-123456.us-east-2.aws.neon.tech/dbname
# - Local PostgreSQL (not recommended for production):
# DATABASE_URL=postgresql://postgres:password@localhost:5432/hedera_mcp

# Redis
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=changeme

# Hedera Network Configuration
HEDERA_NETWORK=testnet
HEDERA_OPERATOR_ID=0.0.xxxxx
HEDERA_OPERATOR_KEY=302e020100300506032b657004220420...
SERVER_ACCOUNT_ID=0.0.xxxxx
SERVER_PRIVATE_KEY=302e020100300506032b657004220420...

# Credits System
CREDITS_CONVERSION_RATE=1000
CREDITS_MINIMUM_PAYMENT=1
CREDITS_MAXIMUM_PAYMENT=10000

# Rate Limiting
RATE_LIMIT_MAX=100

# Admin Portal
WALLETCONNECT_PROJECT_ID=your_project_id_here
NEXT_PUBLIC_API_BASE_URL=http://localhost:3002  # HTTP API port
NEXT_PUBLIC_APP_URL=http://localhost:3001
ADMIN_PORTAL_URL=http://localhost:3001  # For CORS

# Monitoring (Optional)
ENABLE_METRICS=true
SENTRY_DSN=
ADMIN_SENTRY_DSN=
DD_API_KEY=
DD_SITE=datadoghq.com
DD_AGENT_HOST=datadog
DD_TRACE_ENABLED=true
GRAFANA_PASSWORD=admin
GRAFANA_ROOT_URL=http://localhost:3002

# pgAdmin (Optional - only if using local PostgreSQL)
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin

# OpenAI API Key (Required for conversational agent)
OPENAI_API_KEY=sk-...