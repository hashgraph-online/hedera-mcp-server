{
  "preset": "../jest.config.json",
  "testMatch": [
    "**/__tests__/auth/**/*.test.ts",
    "**/__tests__/auth/**/*.integration.test.ts"
  ],
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/dist/"
  ],
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/dist/",
    "/__tests__/"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  }
}